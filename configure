#!/bin/bash

PREFIX=/usr/local

for arg in $@ ; do
    case "$arg" in
        --prefix*)
            PREFIX=$(echo $arg | cut -d= -f2)
            ;;
    esac
done

PREFIX=$(echo $PREFIX | sed -e 's/\//\\\//g')

cat src/Makefile.in | sed -e "s/@PREFIX@/$PREFIX/" > Makefile
cat src/service.in | sed -e "s/@PREFIX@/$PREFIX/" > bin/service
