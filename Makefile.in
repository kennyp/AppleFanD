PREFIX=@PREFIX@

all: main.c
		@gcc main.c -o applefand

static: main.c
		@gcc -static main.c -o applefand

doinstall:
	@cp applefand $(PREFIX)/bin
	@chown root:root $(PREFIX)/bin/applefand
	@chmod ug+s $(PREFIX)/bin/applefand

install-static: static doinstall

install: all doinstall

clean:
	@rm -f applefand

.PHONY: install
.PHONY: install-static
.PHONY: clean
